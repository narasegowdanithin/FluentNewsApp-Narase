<!-- MainWindow.xaml -->
<Window x:Class="NewsAggregator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsAggregator"
        mc:Ignorable="d"
        Title="News Aggregator"
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📰" FontSize="24" Margin="0,0,12,0"/>
                    <TextBlock Text="News Aggregator" 
                               FontSize="24" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Theme Selector ComboBox -->
                    <ComboBox VerticalAlignment="Center"
                              Margin="0,0,8,0"
                              MinWidth="100"
                              SelectedValue="{Binding CurrentThemeMode}">
                        <ComboBox.ItemsSource>
                            <x:Array Type="{x:Type models:ThemeMode}"
                                     xmlns:models="clr-namespace:NewsAggregator.Models">
                                <models:ThemeMode>Light</models:ThemeMode>
                                <models:ThemeMode>Dark</models:ThemeMode>
                                <models:ThemeMode>System</models:ThemeMode>
                            </x:Array>
                        </ComboBox.ItemsSource>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding}" Value="Light">
                                                    <Setter Property="Text" Value="☀️ Light"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding}" Value="Dark">
                                                    <Setter Property="Text" Value="🌙 Dark"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding}" Value="System">
                                                    <Setter Property="Text" Value="💻 System"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Command="{Binding RefreshCommand}"
                            IsEnabled="{Binding IsRefreshing, Converter={StaticResource InverseBooleanConverter}}"
                            VerticalAlignment="Center"
                            Padding="12,8"
                            Style="{StaticResource {x:Type Button}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="↻" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Refresh All"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Background="{DynamicResource ApplicationBackgroundBrush}">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="24">
                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CategorySectionStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Category Header -->
                                    <TextBlock Grid.Row="0" 
                                               Style="{StaticResource CategoryHeaderStyle}">
                                        <Run Text="{Binding CategoryIcon, Mode=OneWay}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding CategoryName, Mode=OneWay}"/>
                                    </TextBlock>

                                    <!-- Content Area -->
                                    <Grid Grid.Row="1">
                                        <!-- Loading Indicator -->
                                        <TextBlock Text="Loading..." 
                                                   Style="{StaticResource LoadingTextStyle}"
                                                   Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        <!-- Error Message -->
                                        <TextBlock Text="{Binding ErrorMessage}" 
                                                   Style="{StaticResource ErrorMessageStyle}"
                                                   Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        <!-- Articles List -->
                                        <ItemsControl ItemsSource="{Binding Articles}"
                                                      Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                            <ItemsControl.Style>
                                                <Style TargetType="ItemsControl">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasError}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ItemsControl.Style>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,0,0,12">
                                                        <TextBlock Style="{StaticResource ArticleTitleStyle}">
                                                            <Run Text="• "/>
                                                            <Run Text="{Binding Title}"/>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding PublishedAt, StringFormat='Published: {0:MMM dd, yyyy h:mm tt}'}" 
                                                                   Style="{StaticResource ArticleDateStyle}"
                                                                   Margin="16,0,0,0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>