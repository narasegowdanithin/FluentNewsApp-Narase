<!-- App.xaml -->
<Application x:Class="NewsAggregator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- .NET 9 Native Fluent Theme - Default to Dark -->
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.Dark.xaml" />

                <!-- Custom Styles -->
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"
                                                     xmlns:converters="clr-namespace:NewsAggregator.Converters"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"
                                                            xmlns:converters="clr-namespace:NewsAggregator.Converters"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"
                                               xmlns:converters="clr-namespace:NewsAggregator.Converters"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>